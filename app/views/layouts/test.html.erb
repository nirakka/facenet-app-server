<h1>Ranking</h1>
<% @rankings.each.with_index(1) do |ranking, i| %>
<div class="panel panel-default">

  <div class="panel-heading"><%= i %>位 <%= ranking.person1 %>(左)  vs <%= ranking.person2 %>(右)</div>
  <div class="panel-body">
    <div class="row">
      <div class="col-sm-6"><%= image_tag("/#{ranking.person1_path}", style: 'height:auto;width:100%;') %></div>
      <div class="col-sm-6"><%= image_tag("/#{ranking.person2_path}", style: 'height:auto;width:100%;' ) %></div>
    </div>
    <div>
      euclidean distance:<%= ranking.score %>
    </div>
  </div>
</div>
<% end %>
